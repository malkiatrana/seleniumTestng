	@Test(priority=0)
	public void Test_02() {
		RestAssured.baseURI = "https://parabank.parasoft.com/parabank/services/bank/createAccout";
		RestAssured.given().body("{\r\n"
				+ "  \"id\": 56525,\r\n"
				+ "  \"customerId\": 12212,\r\n"
				+ "  \"balance\": 350,\r\n"
				+ "  \"type\": \"CHECKING\"\r\n"
				+ "}").post().then().log().all().assertThat().statusCode(201);
		}
	}

